{
  "definition": {
    "openapi": "3.0.0",
    "info": {
      "title": "My API",
      "version": "1.0.0",
      "description": "Proste API z dokumentacją OpenAPI"
    },
    "servers": [
      {
        "url": "http://localhost:3000"
      }
    ],
    "paths": {
      "/api/v1/hello": {
        "get": {
          "summary": "Zwraca wiadomość powitalną",
          "responses": {
            "200": {
              "description": "Wiadomość powitalna",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string",
                        "description": "Wiadomość powitalna",
                        "example": "Hello World"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/api/v1/goodbye": {
        "get": {
          "summary": "Zwraca wiadomość pożegnalną",
          "responses": {
            "200": {
              "description": "Wiadomość pożegnalna",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string",
                        "description": "Wiadomość pożegnalna",
                        "example": "Goodbye World"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "apis": ["./app.js"]
}
